<h1>Articles</h1>
  <%= link_to "New Article", new_article_path %>
</div>
<% if user_signed_in? %>
  <p>Hello <%= current_user.email %> you liked <%= current_user.likes.count %> article</p>
  <% end %>
<ul>
  <% @articles.each do |article| %>
    <li>
      <%= article.title %>
      <%= link_to "Show", article, :class => "btn" %><br>
      <%= article.likes.count %>
      <%= link_to "Like", article_likes_path(article), method: :post %>
  <% end %>
</ul>